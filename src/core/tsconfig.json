{
  "extends": "@deepracticex/config-preset/typescript-base.json",
  "compilerOptions": {
    "types": ["@cloudflare/workers-types"],
    "outDir": "./dist",
    "paths": {
      "~/*": ["./*"],
      "edge-auth-domain": ["../domain/index.ts"],
      "edge-auth-domain/*": ["../domain/*"]
    }
  },
  "include": ["**/*.ts", "../domain/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
