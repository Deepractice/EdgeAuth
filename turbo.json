{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "lint": {
      "outputs": []
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": ["tests/reports/**"]
    },
    "test:dev": {
      "dependsOn": ["build"],
      "cache": false
    },
    "test:ci": {
      "dependsOn": ["build"],
      "outputs": ["tests/reports/**"]
    },
    "format": {
      "outputs": []
    },
    "format:check": {
      "outputs": []
    },
    "clean": {
      "cache": false
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "outputs": []
    }
  }
}
